 {
     "env": {
         "browser": true,
         "es6": true
     },
     "extends": "airbnb",
     "globals": {
         "Atomics": "readonly",
         "SharedArrayBuffer": "readonly"
     },
     "parserOptions": {
         "ecmaFeatures": {
             "jsx": true
         },
         "ecmaVersion": 2018,
         "sourceType": "module"
     },

     "settings": {
         "react": {
             "version": "16.8"
         }
     },
     "plugins": [
         "react",
         "react-hooks"
     ],
     "rules": {
         "react-hooks/rules-of-hooks": "error",
         "react-hooks/exhaustive-deps": "warn"
     }
 }